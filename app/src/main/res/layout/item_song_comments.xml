<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    card:cardCornerRadius="2dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.music.ting.ui.widget.RoundImageView
            android:id="@+id/comment_user_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_default_pic" />

        <TextView
            android:id="@+id/comment_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@+id/comment_user_pic"
            android:text="@string/comment_user_name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_user_name"
            android:layout_toRightOf="@+id/comment_user_pic"
            android:text="@string/comment_content"
            android:textColor="@color/navigation_text"
            android:textSize="14sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

